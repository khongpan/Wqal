<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.or.nectec.wqal.CalibrateFragment">

    <!-- TODO: Update blank fragment layout -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btDoCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_do_calc" />

            <Spinner
                android:id="@+id/spDoRef"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvMvDo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---.--" />

            <TextView
                android:id="@+id/tvCurDo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---.--" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btEcCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_ec_calc" />

            <Spinner
                android:id="@+id/spEcRef"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvMvEc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---.--" />

            <TextView
                android:id="@+id/tvCurEc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---.--" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btPhCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_ph_calc" />

            <Spinner
                android:id="@+id/spPhRef"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvMvPh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---.--" />

            <TextView
                android:id="@+id/tvCurPh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---.--" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

</FrameLayout>
